void load_menu(void)
{
    int choice;

    do
{
 printf("============================================================\n");
 printf("-                    W E L C O M E                         -\n");
 printf("-                    T O     T H E                         -\n");
 printf("-                  M A R V E L O U S                       -\n");
 printf("-               CS102  INVENTORY  SYSTEM                   -\n");
 printf("============================================================\n");
 printf("1. ADD AN ITEM\n");
 printf("2. SUBTRACT AN ITEM\n");
 printf("3. Exit\n");
 scanf("%d",&choice);

system("clear");
switch(choice) 
{
        case 1: additem();
                break;
        case 2: removeitem();
                break;
        case 3: printf("EXITING PROGRAM\n");
                exit(0);
                break;
            default: printf(" T R Y  A G A I N \n");
                break;
        }
}
 while (choice != 3);
}
